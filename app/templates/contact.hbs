<div class="contact-section">
	<div class="wrapper">
		<div class="contact-container">
			<div class="contactForm">
				<h1>Get <strong>in touch</strong></h1>
				<form action="https://formspree.io/nspendik@gmail.com" method="POST" target="_blank">
					<div class="contactNameEmail">
						<div class="contactName cc_cursor">
							<label for="name">Name *</label><br>
							<input type="text" name="name" id="name" required="true">
						</div>
						<div class="contactEmail">
							<label for="name">Email *</label><br>
							<input type="email" name="_replyto" id="email" required="true">
